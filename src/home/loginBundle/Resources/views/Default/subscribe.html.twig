{% extends 'loginBundle::layout.html.twig' %}

{% block title %}RentMyPet - Inscription{% endblock %}

{% block content %}

    {% block header %}

        <header>
            <div class="container_12" >
                <div class="grid_12" >
                    <h1><a href="/"><img src="bundles/rentmypet/images/header.png"></a></h1>
                </div>
            </div>
            <nav>
                <div class="container_12">
                    <div class="grid_12">
                        <ul class="sf-menu">
                            <li><a href="/">Accueil</a></li>
                            <li><a href="/#">Location</a></li>
                            <li><a href="/login">S'identifier</a></li>
                            <li class="current"><a href="/subscribe">S'enregistrer</a></li>
                        </ul>
                        <div class="clear"></div>
                    </div>
                </div>
            </nav>
        </header>
    {% endblock %}

    <div id="content">
    <div class="container_12">

        <div class="grid_12">
            <h2 class="indent-2">Inscription</h2>
        </div>


        <div class="grid_5">
            <form id="form" action="/subscribe" method="post">
                <fieldset>
                    <label class="email">
                        <span class="title">Email</span>
                        <input type="text"  name="_username" required=""/>
                        <br class="clear">
                    </label>
                    <label class="password">
                        <span class="title">Password</span>
                        <input type="password" name="_password" required=""/>
                        <br class="clear">
                    </label>
                    <label class="lastName">
                        <span class="title">Nom</span>
                        <input type="text"  name="_lastName" required=""/>
                        <br class="clear">
                    </label>
                    <label class="firstName">
                        <span class="title">Prénom</span>
                        <input type="text"  name="_firstName" required=""/>
                        <br class="clear">
                    </label>
                    <label class="phone">
                        <span class="title">Téléphone</span>
                        <input type="text" name="_tel" required=""/>
                        <br class="clear">
                    </label>
                    <label class="departement">
                        <span class="title">Département (numéro)</span>
                        <input type="integer"  name="_departement" required=""/>
                        <br class="clear">
                    </label>
                    <label class="ville">
                        <span class="title">Ville</span>
                        <input type="text" name="_city" required=""/>
                        <br class="clear">
                    </label>
                    <label class="adresse">
                        <span class="title">Adresse</span>
                        <input type="text" name="_adress" required=""/>
                        <br class="clear">
                    </label>
                    <div class="clear"></div>
                    <br><br>
                        <button type="submit">Valider</button>


                    <br><br><br><br>
                </fieldset>
            </form>
        </div>




<h1>{{ error }}</h1>

    </form>
    </div>
    </div>
{% endblock %}