{% extends 'loginBundle::layout.html.twig' %}


{% block title %}RentMyPet - Login{% endblock %}

{% block content %}
    {% block header %}

        <header>
            <div class="container_12" >
                <div class="grid_12" >
                    <h1><a href="/"><img src="bundles/rentmypet/images/header.png"></a></h1>
                </div>
            </div>
            <nav>
                <div class="container_12">
                    <div class="grid_12">
                        <ul class="sf-menu">
                            <li><a href="/">Accueil</a></li>
                            <li><a href="/#">Location</a></li>
                            <li class="current"><a href="/login">S'identifier</a></li>
                            <li><a href="/subscribe">S'enregistrer</a></li>
                        </ul>
                        <div class="clear"></div>
                    </div>
                </div>
            </nav>
        </header>
    {% endblock %}

    <div id="content">
        <div class="container_12">

            <div class="grid_12">
                <h2 class="indent-2">Inscription</h2>
            </div>


            <div class="grid_5">
                <form id="form" action="/login" method="post">
                    <fieldset>
                        <label class="email">
                            <span class="title">Email</span>
                            <input type="text"  name="_username" required=""/>
                            <br class="clear">
                        </label>
                        <label class="password">
                            <span class="title">Password</span>
                            <input type="password" name="_password" required=""/>
                            <br class="clear">
                        </label>
                        <div class="clear"></div>
                        <br><br>
                        <button type="submit">Valider</button>


                        <br><br><br><br>
                    </fieldset>
                </form>
            </div>




            <h1>{{ error }}</h1>

            </form>
        </div>
    </div>
{% endblock %}
